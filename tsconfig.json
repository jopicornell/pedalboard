{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "preserveSymlinks": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@/*": [
        "./front/*"
      ],
    }
  },
  "include": [
    "front/**/*.ts",
    "front/**/*.d.ts",
    "front/**/*.vue",
    "types/**/*.ts",
    "api/**/*.ts",
    "eslint.config.mjs",
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
